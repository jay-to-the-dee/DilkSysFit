<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/runNameEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listview_horizontal_margin"
        android:layout_marginRight="@dimen/listview_horizontal_margin"
        android:layout_marginTop="@dimen/listview_vertical_margin"
        android:textSize="18dip"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/listview_vertical_margin"
        android:layout_marginLeft="@dimen/listview_horizontal_margin"
        android:layout_marginRight="@dimen/listview_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/distanceEntry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/approximateLocationEntry"
            android:gravity="center"/>

        <TextView
            android:id="@+id/approximateLocationEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>